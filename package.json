{
  "name": "helifight",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n server,client -c cyan,magenta \"npm run dev -w @helifight/server\" \"npm run dev -w @helifight/client\"",
    "dev:server": "npm run dev -w @helifight/server",
    "dev:client": "npm run dev -w @helifight/client",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
