{
  "name": "@helifight/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && npm run build:types && npm run build:bundle",
    "clean": "node -e \"const fs=require('node:fs'); fs.rmSync('dist',{recursive:true,force:true}); fs.rmSync('tsconfig.tsbuildinfo',{force:true});\"",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:bundle": "node scripts/build.mjs",
    "start": "node dist/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@helifight/shared": "0.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "socket.io-client": "^4.8.1"
  }
}
